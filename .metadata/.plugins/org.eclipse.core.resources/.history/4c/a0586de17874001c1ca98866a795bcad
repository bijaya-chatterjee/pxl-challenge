package com.challenge.crawler.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.MediaType;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.challenge.crawler.model.Automobile;
import com.challenge.crawler.service.MainService;

@RestController
@RequestMapping("/api")
public class MainController {
	
	@Autowired
	MainService mainService;
	
	@GetMapping("/fetch/all")
	public List<Automobile> fetchAllAutomobile()
	{
		return this.mainService.fetchAllAutombiles();
		
	}
	
	@GetMapping(value = "/fetch/names",produces = MediaType.APPLICATION_JSON_VALUE)
	public List<String> fetchAutomobileNames()
	{
		return this.mainService.fetchNames();		
	}

}
