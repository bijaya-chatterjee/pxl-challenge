<div id="main-content">
<div class="split left">
  <div class="">    
    <h2>Automobile List</h2>
   		<ul id="auto-name">
		  <li v-for="item in items" :key="item.id">
		    <a href="#" v-on:click="fetchCarDetails(item.id)">{{item.name}}</a>
		  </li>
		</ul>
  </div>
