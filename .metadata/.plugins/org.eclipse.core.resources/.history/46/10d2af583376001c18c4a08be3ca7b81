<div id="main-content">
<div class="split left">
  <div class="">    
    <h2>Automobile List</h2><span v-if="counter > 0"><i class="loader">loading</i></span>
   		<ul id="auto-name">
		  <li v-for="item in items" :key="item">
		    <a href="#" v-on:click="fetchCarDetails(item)">{{item}}</a>
		  </li>
		</ul>
  </div>
</div>

<div class="split right">
  <div class="">
    <h2>Details</h2>
    <div id="details">
    	
    </div>
  </div>
</div>
